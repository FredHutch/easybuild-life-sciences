# updated John Dey Fred Hutch Cancer Center
easyblock = 'GoPackage'

name = 'SeqKit'
version = '2.10.1'

homepage = 'https://bioinf.shenwei.me/seqkit/'
description = """SeqKit - a cross-platform and ultrafast toolkit for FASTA/Q file manipulation"""

toolchain = SYSTEM

source_urls = ['https://github.com/shenwei356/seqkit/archive']
sources = ['v%(version)s.tar.gz']
checksums = ['e3897f9ccd9503d10c1a8d67d9790ee3e4c91da369e14b716ea7c4e8adba55ee']

builddependencies = [
    ('Go', '1.23.6'),
]

installopts = './%(namelower)s'

sanity_check_commands = [
    "seqkit version",
    "seqkit genautocomplete"
]

moduleclass = 'bio'
